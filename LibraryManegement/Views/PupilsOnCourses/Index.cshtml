@model IEnumerable<LibraryManegement.Models.PupilsOnCourse>

<div class="container">

    <div>
        <h2 class="float-left">Pupils On Course</h2>
        <a class="btn btn-outline-primary float-right" href="@Url.Action("Create", "PupilsOnCourses")" role="button">Thêm</a>
    </div>

    <table class=" table table-hover">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Course.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pupils.Author_first_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date_from)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date_to)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pupils.Author_first_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date_from)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date_to)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
