@model IEnumerable<LibraryManegement.Models.BookCourse>


<div class="container">

    <div>
        <h2 class="float-left">Book of Courses</h2>
        <a class="btn btn-outline-primary float-right" href="@Url.Action("Create", "BookCourses")" role="button">Thêm</a>
    </div>

    <table class=" table table-hover">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Book_title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Book_title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

