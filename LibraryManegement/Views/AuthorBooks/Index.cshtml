@model IEnumerable<LibraryManegement.Models.AuthorBook>



<div class="container">

    <div>
        <h2 class="float-left">Sách của tác giả</h2>
        <a class="btn btn-outline-primary float-right" href="@Url.Action("Create", "AuthorBooks")" role="button">Thêm</a>
    </div>

    <table class=" table table-hover">

        <thead>
            <tr>
                <th>
                    Author
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Book_title)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Author.Author_first_name @item.Author.Author_middle_name  @item.Author.Author_last_name 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Book_title)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
